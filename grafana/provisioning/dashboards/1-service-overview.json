    {
      "title": "Requests Per Second (RPS) by Status Code",
      "description": "Количество запросов в секунду, сгруппированное по коду ответа HTTP.",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "id": 4,
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"pastebin\", code=~\"2..\"}[2m])) by (code)",
          "legendFormat": "Success ({{code}})",
          "refId": "A"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"pastebin\", code=~\"3..\"}[2m])) by (code)",
          "legendFormat": "Redirect ({{code}})",
          "refId": "B"
        },
        {
          "expr": "sum(rate(http_requests_total{job=\"pastebin\", code=~\"4..\"}[2m])) by (code)",
          "legendFormat": "Client Error ({{code}})",
          "refId": "C"
